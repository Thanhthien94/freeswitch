<configuration name="acl.conf" description="Network Lists">
  <network-lists>
    <!-- Default allow all for local networks -->
    <list name="domains" default="deny">
      <node type="allow" cidr="127.0.0.1/32"/>
      <node type="allow" cidr="192.168.0.0/16"/>
      <node type="allow" cidr="10.0.0.0/8"/>
      <node type="allow" cidr="172.16.0.0/12"/>
      <node type="allow" cidr="192.168.65.0/24"/>
    </list>
    
    <!-- ESL access for CLI -->
    <list name="esl_access" default="deny">
      <node type="allow" cidr="127.0.0.1/32"/>
      <node type="allow" cidr="172.16.0.0/12"/>
    </list>
    
    <!-- SIP profiles access -->
    <list name="sip_profiles" default="deny">
      <node type="allow" cidr="127.0.0.1/32"/>
      <node type="allow" cidr="192.168.0.0/16"/>
      <node type="allow" cidr="10.0.0.0/8"/>
      <node type="allow" cidr="172.16.0.0/12"/>
      <node type="allow" cidr="192.168.65.0/24"/>
      <!-- Allow external IP for testing -->
      <node type="allow" cidr="147.182.188.245/32"/>
    </list>
  </network-lists>
</configuration>
