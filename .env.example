# Environment Configuration for FreeSWITCH PBX System

# =============================================================================
# GENERAL SETTINGS
# =============================================================================
NODE_ENV=development
COMPOSE_PROJECT_NAME=freeswitch-pbx

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# External IP for FreeSWITCH (auto-detect or specify)
EXTERNAL_IP=auto
# Domain for FreeSWITCH
FREESWITCH_DOMAIN=localhost

# =============================================================================
# FREESWITCH CONFIGURATION
# =============================================================================
# Event Socket Library password
FREESWITCH_ESL_PASSWORD=ClueCon
# SIP domain
FREESWITCH_SIP_DOMAIN=localhost
# Default context
FREESWITCH_DEFAULT_CONTEXT=default

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL settings
POSTGRES_DB=pbx_db
POSTGRES_USER=pbx_user
POSTGRES_PASSWORD=pbx_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Database URL for NestJS
DATABASE_URL=postgresql://pbx_user:pbx_password@postgres:5432/pbx_db

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379

# =============================================================================
# RABBITMQ CONFIGURATION
# =============================================================================
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_URL=amqp://admin:admin123@rabbitmq:5672

# =============================================================================
# NESTJS APPLICATION CONFIGURATION
# =============================================================================
# JWT Secret for authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# API Configuration
API_PORT=3000
API_PREFIX=api/v1

# CORS settings
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Rate limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Grafana settings
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# Prometheus settings
PROMETHEUS_RETENTION=200h

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# SSL/TLS settings
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Session settings
SESSION_SECRET=your-session-secret-change-this
SESSION_MAX_AGE=86400000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/var/log/app

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourcompany.com

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Hot reload for development
HOT_RELOAD=true
# Debug mode
DEBUG=true
# API documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=api/docs

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Health check settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000

# Metrics collection
METRICS_ENABLED=true
METRICS_PATH=/metrics

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
FEATURE_CALL_RECORDING=true
FEATURE_CONFERENCE=true
FEATURE_IVR=true
FEATURE_VOICEMAIL=true
FEATURE_CALL_PARKING=true
FEATURE_CALL_TRANSFER=true

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Twilio (for SMS/external calling)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SLACK_CHANNEL=#alerts

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# Redis connection pool
REDIS_POOL_MIN=2
REDIS_POOL_MAX=10

# Worker processes
WORKER_PROCESSES=auto
WORKER_CONNECTIONS=1024

# =============================================================================
# TIMEZONE CONFIGURATION
# =============================================================================
TZ=UTC
DEFAULT_TIMEZONE=America/New_York
