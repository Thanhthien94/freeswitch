# NextJS Frontend Environment Variables for Docker
# Backend API URL (Use public domain for both browser and server)
NEXT_PUBLIC_API_URL=https://api.finstar.vn/api/v1
BACKEND_API_URL=https://api.finstar.vn/api/v1

# WebSocket URL for browser connections
NEXT_PUBLIC_WS_URL=wss://api.finstar.vn

# Session Secret for JWT (must match backend JWT_SECRET)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-super-secret-jwt-key-change-this-in-production

# NextAuth Configuration
NEXTAUTH_URL=https://office.finstar.vn
NEXTAUTH_SECRET=your-nextauth-secret-change-this-in-production

# Production
NODE_ENV=production

# Feature Flags
NEXT_PUBLIC_ENABLE_DEMO_MODE=false
NEXT_PUBLIC_ENABLE_MOCK_FALLBACK=false

# Business Hours Configuration
NEXT_PUBLIC_BUSINESS_HOURS_START=9
NEXT_PUBLIC_BUSINESS_HOURS_END=18

# Debug Configuration
NEXT_PUBLIC_DEBUG_MODE=false

# Performance
NEXT_TELEMETRY_DISABLED=1
